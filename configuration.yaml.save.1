media_player:
  - platform: cast
    host: 192.168.0.6
    name: "Livingroom Speaker"
  - platform: philips_js
    host: 192.168.0.11
    name: "Livingroom TV2"
  - platform: roku
    host: 192.168.0.5
    name: "Livingroom NowTV"

hive:
  username: !secret hive_username
  password: !secret hive_password


# Text to speech
tts:
  platform: google

device_tracker:
  - platform: sky_hub
    host: 192.168.0.1
  - platform: owntracks
    max_gps_accuracy: 200


camera:
  name: Nik
  platform: generic
  still_image_url: https://maps.googleapis.com/maps/api/staticmap?center={{ states.device_tracker.noid1011_nexus6.attributes.latitude }},{{ states.device_tracker.noid1011_nexus6.attributes.longitude }}&zoom=13&size=500x500&maptype=roadmap&markers=color:orange%7Clabel:N%7C{{ states.device_tracker.noid1011_nexus6.attributes.latitude }},{{ states.device_tracker.noid1011_nexus6.attributes.longitude }}
  limit_refetch_to_url_change: true



input_select:
  radio_station:
    name: 'Select Radio Station:'
    options:
      - BBC One
      - BBC Two
      - BBC Four
      - BBC 4 Extra
    initial: 'BBC Two'

  chromecast_radio:
    name: 'Select Speakers:'
    options:
      - Livingroom
    initial: Livingroom
    icon: mdi:speaker-wireless

script:
  radio_player:
    alias: Play Radio on Chromecast Audio
    sequence:
      - service: media_player.volume_set
        data:
          entity_id: media_player.living_room
          volume_level: '0.30'
      - service: media_player.play_media
        data_template:
          entity_id: >
            {% if is_state('input_select.chromecast_radio', 'Livingroom') %} media_player.living_room
            {% endif %}
          media_content_id: >
            {% if is_state("input_select.radio_station", "BBC One") %} http://bbcmedia.ic.llnwd.net/stream/bbcmedia_radio1_mf_p
            {% elif is_state("input_select.radio_station", "BBC Two") %} http://bbcmedia.ic.llnwd.net/stream/bbcmedia_radio2_mf_p
            {% elif is_state("input_select.radio_station", "BBC Four") %} http://bbcmedia.ic.llnwd.net/stream/bbcmedia_radio4fm_mf_p
            {% elif is_state("input_select.radio_station", "BBC 4 Extra") %} http://bbcmedia.ic.llnwd.net/stream/bbcmedia_radio4extra_mf_p
            {% endif %}
          media_content_type: 'audio/mp4'


group: !include groups.yaml
automation: !include automations.yaml
