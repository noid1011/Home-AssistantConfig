homeassistant:

  name: Home

  latitude: !secret my_lat
  longitude: !secret my_long
  elevation: 23

  unit_system: metric
  time_zone: Europe/London 

  customize: 
    script.radio_player:
      friendly_name: Tune
      icon: mdi:play
    media_player.roku_326673099455:
      friendly_name: Livingroom NowTV   
    binary_sensor.porch_door:
      device_class: opening
         

